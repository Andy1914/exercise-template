{
    "name": "yolobe-azure-template",
    "version": "0.0.2-5",
    "description": "Yolobe Azure Template",
    "main": "src/index.js",
    "license": "UNLICENSED",
    "precommit": "lint, test",
    "prepush": "lint,test",
    "scripts": {
        "build": "set NODE_ENV=\"prod\" && npm run bundle",
        "bundle": "webpack --color",
        "bundle:watch": "webpack --watch --progress --color",
        "at": "cucumber-js --tags '@test'",
        "at:local": "cucumber-js",
        "at:report": "node ./cucumber-report.js",
        "lint": "tslint 'src/**/*.ts'",
        "sls:deploy": "sls deploy",
        "sls:package": "sls package",
        "test": "karma start --single-run",
        "test:coverage": "ng test --code-coverage --singleRun=false",
        "test:watch": "karma start",
        "test:local": "karma start karma.conf.js --browsers=Chrome"
    },
    "dependencies": {
        "rxjs": "^6.5.1",
        "serverless-azure-functions": "^0.7.0"
    },
    "devDependencies": {
        "@types/jasmine": "^3.3.12",
        "@types/webpack-env": "^1.13.9",
        "awesome-typescript-loader": "^5.2.1",
        "copy-webpack-plugin": "^5.0.3",
        "cucumber": "^5.1.0",
        "cucumber-html-reporter": "^5.0.0",
        "cucumber-junit": "^1.7.1",
        "istanbul-instrumenter-loader": "^3.0.1",
        "is-my-json-valid": "^2",
        "jasmine": "^3.4.0",
        "jsonpath-plus": "^0.18.0",
        "karma": "^4.1.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage-istanbul-reporter": "^2.0.5",
        "karma-jasmine": "^2.0.1",
        "karma-junit-reporter": "^1.2.0",
        "karma-webpack": "^3.0.5",
        "path": "^0",
        "prettyjson": "^1",
        "puppeteer": "^1.15.0",
        "request": "^2",
        "serverless": "^1.41.1",
        "serverless-webpack": "^5.2.0",
        "swagger-tools": "^0",
        "tslint": "^5.16.0",
        "tslint-clean-code": "^0.2.9",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.4.5",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.1",
        "webpack-log": "^2.0.0",
        "xmldom": "^0",
        "xpath.js": "^1"
    }
}
