{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "src/typings.d.ts"
    ],
     "lib": [
            "dom",
            "es2015",
            "es5",
            "es6",
            "esnext.asynciterable"
        ]
  },
  "exclude": [
    "node_modules"
  ]
}
